    <item>
        <shape>
            <solid android:color="#ffffff" />
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp"
                android:bottomRightRadius="7dp" android:bottomLeftRadius="7dp" />
            <stroke android:width="0dp" android:color="#ffa8abad" />
        </shape>
    </item>

</layer-list>
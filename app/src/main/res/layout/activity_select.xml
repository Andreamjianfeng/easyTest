<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_activict"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jianfeng.jianfengdriving.SelectActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/select_toolbar"
        style="@style/use_Toolbar" >
    </android.support.v7.widget.Toolbar>

    <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
        android:id="@+id/lei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_toolbar"
        android:gravity="center"
        android:text="请选择驾考类型"
        android:textColor="#4ec64e"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/listselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lei">

    </ListView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_below="@id/listselect"
        android:src="@drawable/chebignan"
        android:layout_height="wrap_content" />
</RelativeLayout>

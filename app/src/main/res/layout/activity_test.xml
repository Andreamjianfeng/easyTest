<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activict"
    android:orientation="vertical"
    android:id="@+id/test_re"
    tools:context="com.jianfeng.jianfengdriving.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/test_toolbar"
              style="@style/use_Toolbar"/>

        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:id="@+id/index"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:paddingLeft="20dp"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/lyimg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />
        </LinearLayout>

        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:layout_below="@+id/lyimg"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/lyradio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/radioAchoose"
                    style="@style/use_RadioButton" />

                <RadioButton
                    android:id="@+id/radioBchoose"
                    style="@style/use_RadioButton" />

                <RadioButton
                    android:id="@+id/radioCchoose"
                    style="@style/use_RadioButton" />

                <RadioButton
                    android:id="@+id/radioDchoose"
                    style="@style/use_RadioButton" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/lycheckbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">


                <CheckBox
                    android:id="@+id/checkBoxB"
                    style="@style/use_CheckBox" />

                <CheckBox
                    android:id="@+id/checkBoxA"
                    style="@style/use_CheckBox" />

                <CheckBox
                    android:id="@+id/checkBoxC"
                    style="@style/use_CheckBox" />

                <CheckBox
                    android:id="@+id/checkBoxD"
                    style="@style/use_CheckBox" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_activict"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/reflash"
            style="@style/use_test_btn"
            android:text="获取题目" />

        <Button
            android:id="@+id/backtitle"
            style="@style/use_test_btn"
            android:text="@string/back_topic" />

        <Button
            android:id="@+id/next"
            style="@style/use_test_btn"
            android:text="@string/nest_topic" />

        <Button
            android:id="@+id/confirm"
            style="@style/use_test_btn"
            android:text="查看答案" />
    </LinearLayout>
</RelativeLayout>

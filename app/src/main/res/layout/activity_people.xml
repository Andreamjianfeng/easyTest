<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_people"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activict"
    tools:context="com.jianfeng.jianfengdriving.PeopleActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/people_top_view"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/back1"
            android:id="@+id/people_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:text="个人中心"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/my_icon_img"
        android:layout_below="@+id/people_top_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="@color/colorPrimary"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="true"
        android:layout_marginTop="15dp" />
    <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
        android:id="@+id/my_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_icon_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/temp"
        android:textColor="@color/text"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/my_name_tv"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/people_about_me"
            android:layout_height="50dp">
            <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
               style="@style/use_people_text"
                android:text="个人资料" />
            <ImageView
                style="@style/use_people_img" />
            <View
                style="@style/use_people_view" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/people_friend"
            android:layout_height="50dp">

            <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
                style="@style/use_people_text"
                android:text="圈子" />
            <ImageView
                style="@style/use_people_img" />
            <View
                style="@style/use_people_view" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/people_set_me"
            android:layout_height="50dp">

            <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
                style="@style/use_people_text"
                android:text="设置" />

              <ImageView
            style="@style/use_people_img" />

            <View
                style="@style/use_people_view" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/people_album_me"
            android:layout_height="50dp">

            <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
                style="@style/use_people_text"
                android:text="我的相册" />

            <ImageView
                style="@style/use_people_img" />
            <View
                style="@style/use_people_view" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
                style="@style/use_people_text"
                android:text="我的钱包" />

            <ImageView
                style="@style/use_people_img" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_button"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/people_go"
            android:layout_height="50dp">
           <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
               android:layout_width="wrap_content"
               android:text="退出登录"
               android:textSize="22sp"
               android:textColor="@color/red"
               android:layout_centerVertical="true"
               android:layout_centerHorizontal="true"
               android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activict"
    tools:context="com.jianfeng.jianfengdriving.VideoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/usevideo_toolbar"
        style="@style/use_Toolbar" />

    <ImageView
        android:id="@+id/usevideoplay"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/usevideo_toolbar"
        android:src="@drawable/paly_video_go_fiy" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/usevideoplay"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
                android:id="@+id/usevideotext"
                style="@style/use_layout"
                android:textColor="@color/text"
                android:text="视频介绍"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/uesvideoimg"
                android:layout_width="wrap_content"
                android:layout_height="250dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>

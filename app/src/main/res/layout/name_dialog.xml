<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/customDialog"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        android:layout_height="wrap_content">
         <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
             android:layout_width="wrap_content"
             android:textColor="@color/text"
             android:id="@+id/name_dialog_name"
             android:layout_marginTop="12dp"
             android:text="@string/temp"
             android:layout_gravity="center"
             android:textSize="18sp"
             android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:background="@color/colorPrimary"
            android:layout_height="0.6dp"/>
        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="@string/temp"
            android:layout_marginLeft="15dp"
            android:id="@+id/name_dialog_tv"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="230dp"
            android:layout_marginTop="20dp"
            android:id="@+id/name_dialog_edi"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:layout_height="45dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="110dp"
                android:id="@+id/can_dialog_bty"
                android:text="取消"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_button_witce"
                android:layout_height="40dp" />
            <Button
                android:layout_width="110dp"
                android:id="@+id/ok_dialog_bty"
                android:layout_alignParentRight="true"
                android:text="确定"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_button"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

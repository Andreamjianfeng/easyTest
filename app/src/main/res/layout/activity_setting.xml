<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f3f3"
    android:orientation="vertical"
    tools:context="com.jianfeng.jianfengdriving.SettingActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/people_top_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/setting_back_av"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back1" />
        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textColor="@color/text"
            android:textSize="20sp" />
    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:background="@color/codeGary"
    android:layout_marginTop="10dp"
    android:layout_height="0.6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/re_icon"
        android:layout_height="65dp"
        android:background="@color/white">

        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="头像"
            android:textColor="@color/text"
            android:textSize="15sp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="50dp"
            android:id="@+id/setting_icon"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/setting_back"
            android:layout_marginRight="5dp"
            app:riv_corner_radius="30dip"
            app:riv_border_width="2dip"
            app:riv_border_color="@color/colorPrimary"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true"
            android:layout_height="50dp" />
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/setting_back"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/codeGary"
        android:layout_height="0.6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/re_name"
        android:layout_height="55dp"
        android:background="@color/white">

        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            android:textColor="@color/text"
            android:textSize="15sp" />
        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:id="@+id/setting_name"
            android:layout_toLeftOf="@+id/setting_back_two"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="@string/temp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/setting_back_two"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/codeGary"
        android:layout_height="0.6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/re_phone"
        android:background="@color/white">

        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="号码"
            android:textColor="@color/text"
            android:textSize="15sp" />
        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:id="@+id/setting_phone"
            android:layout_toLeftOf="@+id/setting_back_three"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="@string/temp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/setting_back_three"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/codeGary"
        android:layout_height="0.6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/re_about"
        android:background="@color/white">

        <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="个人介绍"
            android:textColor="@color/text"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:id="@+id/setting_about"
            android:layout_toLeftOf="@+id/setting_back_five"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="@string/temp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="30dp"
            android:id="@+id/setting_back_five"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/codeGary"
        android:layout_height="0.6dp"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/loading_re"
        android:visibility="gone"
        android:background="#7feee7dd"
        android:layout_height="match_parent">
    <com.jianfeng.jianfengdriving.Myjava.SoGouBrowserLoading
        android:layout_width="match_parent"
        android:id="@+id/setting_loadingView"
        android:layout_height="match_parent" />
    <com.jianfeng.jianfengdriving.Myjava.MyFrontTextView
        android:layout_width="wrap_content"
        android:text="真正上传。。。。"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="220dp"
        android:textColor="@color/text"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
